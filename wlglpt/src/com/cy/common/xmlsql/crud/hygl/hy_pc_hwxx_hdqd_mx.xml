        update HY_PC_HWXX_HDQD_MX set HDQD_DJXH=#hdqdDjxh#,HD_DJXH=#hdDjxh#,DQZTBZ=#dqztbz# where HDQD_DJXH=#hdqdDjxh# and HD_DJXH=#hdDjxh#
