    </update>
	<!--表数据：删除-->
	<delete id="deleteHyPcHwxxHdqdMx" parameterClass="java.util.Map">
		delete from HY_PC_HWXX_HDQD_MX where HDQD_DJXH=#hdqdDjxh#
    </delete>
