<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
 	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta http-equiv="pragma" content="no-cache"/>
    <meta http-equiv="Cache-Control" content="no-cache,must-revalidate"/>
    
    <title>费用录入</title>
	
	<link href="../css/webui/main.css" rel="stylesheet" />
		
    <script src="../js/jquery/jquery-1.8.3.min.js" type="text/javascript"></script>
    <script src="../js/sys/webui/contract/header.js"></script>   
    <script src="../js/sys/webui/logo.js"></script>   	 
	
    <link href="../js/sys/ymPrompt/skin/ch/ymPrompt.css" rel="stylesheet" />
	<link href="../css/webui/hgrid.css" rel="stylesheet" />
	<link href="../js/ligerUI/skins/Aqua/css/ligerui-all.css" rel="stylesheet" type="text/css" />
	
	<script src="../js/sys/ymPrompt/ymPrompt.js" type="text/javascript"></script>
	<script src="../js/sys/webui/hgrid.js" type="text/javascript"></script>
	<script src="../js/sys/webui/contract/left.js" type="text/javascript"></script>
	<script type="text/javascript" src="../js/sys/DatePicker/WdatePicker.js"></script>
	<script src="../js/themes/waybillamountc/waybillamountList.js"  type="text/javascript"></script>
	<!-- <script src="../js/themes/waybillc/waybill_add.js"  type="text/javascript"></script> -->
	<link href="../css/webui/commonPage.css" rel="stylesheet" />
	<script type="text/javascript" src="../js/sys/webui/SelectSimu.js"></script>
	<style type="text/css">
		.com_input{
	 		width: 90px;
	 	}
	</style>
	<script type="text/javascript">
		$(function(){
			$(".com_input").val("");
			$(".select").val("");
			//f_contract('运单状态','status','');
			//f_contract('计费状态','billstatus','');
			f_hgrid_ini();
			$("#pagecode").val("1");
			$('.status').SelectSimu({
				width : 90,
				zIndex : 1,
				listNum : 5,
				listValue : ['0','1','2','3','4'],
				listOption : ['全部','已装车','已发车','已到车','已签收'],
				imgSrc : '../imgs/sys/icon_down.png'
			});
			$('.billstatus').SelectSimu({
				width : 90,
				zIndex : 2,
				listNum : 5,
				listValue : ['0','1','2','3','4'],
				listOption : ['全部','未计费','已计费','已确认','已结算'],
				imgSrc : '../imgs/sys/icon_down.png'
			});
			var waybillnumber = trim($("#waybillnumber").val());
			var frompartyname = trim($("#frompartyname").val());
			var mdd = trim($("#mdd").val());
 			var topartyname = trim($("#topartyname").val());
 			var khh = trim($("#khh").val());
 			var status = $('.status div span').text();
 			var billstatus = $('.billstatus div span').text();
 			if(status=="全部"){
 				status="";
 			}
 			if(billstatus=="全部"){
 				billstatus="all";
 			}
 			//alert(status+billstatus);
 			var fromdate= $("#fromdate").val();
		    var todate= $("#todate").val();
			var params="&waybillnumber="+waybillnumber+"&frompartyname="+frompartyname+"&topartyname="+topartyname+"&status="+
			           status+"&billstatus="+billstatus+"&fromdate="+fromdate+"&fromQuery="+"waybillamount"+"&todate="+todate+
					   "&menuindex="+2+"&clientnumber="+khh+"&consigneetown="+mdd;
			f_hgrid_json(params);
			$('input').keydown(function(e){
				if(e.keyCode==13){
				 	f_searchclick();
				}
			});
		});
	</script>
 </head>
  
  <body>
    	<!-- 顶部 --开始  此处须由js动态加入-->
		<div id="header" class="c-header" >
	
		</div>
		<!-- 顶部 --结束-->
	
		<!-- LOGON --开始   此处须由js动态加入-->
		<div id="logo" class="c-logo" >
		
		</div>
	<!-- LOGON --结束-->

	<div id="main" class="c-main">
		
  		<div id="left" class="c-left">
			<div id="accordion"> 
			</div>  
		</div>
  		<div id="right" class="c-right">
  				<div class="crumbs fn-mt10 fn-cGray3">
						<span class="house"></span>
						<span class="links"><a href="../logincs/index_main" class="fn-cBlue">首页</a>
						<span class="fn-ml5 fn-mr5">&gt;</span><b>费用录入</b></span>
				</div>
				<div class="fgxDiv"></div>
				<table class="formTable" style="width:820px;">
					<tr>
						<td class="rightTd" width="60px">运单号</td>
						<td width="100px"><input id="waybillnumber" type="text" class="com_input"/></td>
						<td class="rightTd" width="60px">运单状态</td>
						<td width="100px">
							<div class="status"></div>
						</td>
						<td class="rightTd" width="60px">计费状态</td>
						<td width="100px">
							<div class="billstatus"></div>
						</td>
						<td class="rightTd" width="60px">分包商</td>
						<td width="100px"><input id="topartyname" type="text" class="com_input"/></td>
						<td class="rightTd" width="60px">目的地</td>
						<td width="120px"><input id="mdd" type="text" class="com_input"/></td>
					</tr>
					<tr>
						<td class="rightTd">托运日期</td>
						<td colspan="3">
							<input type="text" name="fromdate" id="fromdate" class="Wdate comDate" onFocus="WdatePicker({firstDayOfWeek:1})"style="width: 100px;"/>
							-
							<input type="text" name="todate" id="todate"style="width: 100px;" class="Wdate comDate" onFocus="WdatePicker({firstDayOfWeek:1})"/>
						</td>
						<td class="rightTd">发货方</td>
						<td ><input id="frompartyname" type="text" class="com_input"/></td>
						<td class="rightTd">客户单号</td>
						<td colspan="3">
							<input id="khh" type="text" class="com_input"/>
							<button class="btn-white fn-noborder" style="margin-left: 20px;" onclick="f_searchclick()">查询</button>
						</td>

					</tr>					
				</table>
	        	<div id="hgrid_div">
		        	<div id="hgridDiv" style="float: left;overflow-x:scroll;width:720px;min-height:60px; ">
		  					<table id="hgrid"  style="width:1500px;" cellspacing="0"></table>
		  			</div>
		  			<div style="width: 100px;float: left;min-height:60px;">
		  					<table id="operation"  style="width:100px;" cellspacing="0"></table>
		  			</div>
	  			</div>
       		</div>
  		</div>
  </body>
</html>
