/*
手机瀑布流css
*/
*{ 
margin:0; 
padding:0; 
} 
h1{ 
text-align:center; 
height:100px; 
} 
body{ 
background-color:RGB(232,231,226); 
} 
.all{ 
margin:0 auto; 
width:1000px; 
} 
.number{ 
float:left; 
width:225px; 
} 
.content 
{ 
margin:5px; 
background-color:white; 
} 
img{ 
margin:5px; 
} 
.loading{ 
position: absolute; 
width:100%; 
height:40px;
line-height:40px;
display:none; 
text-align:center; 
background-color:RGB(189,203,207); 
} 
#toTop 
{ 
position:fixed; 
_position:fixed; 
font-size:12px; 
color:Blue; 
width:15px; 
text-align:center; 
right:50px; 
bottom:100px; 
cursor:pointer; 
background-color:RGB(243,247,251); 
display:none; 
} 